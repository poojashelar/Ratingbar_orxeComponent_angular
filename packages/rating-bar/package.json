{
    "name": "@RatingBar/rating-bar",
    "version": "0.0.1",
    "description": "Orxe Component",
    "main": "dist/index.js",
    "types": "dist/types",
    "files": [
        "dist"
    ],
    "license": "UNLICENSED",
    "engines": {
        "node": ">=8.0.0"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.md": [
            "prettier --write",
            "git add"
        ]
    },
    "author": "ORXe",
    "scripts": {
        "test": "jest",
        "test:skipaxe": "jest \"^(.*/)*(.*\\.)*(spec)\\.ts$\"",
        "test:coverage": "jest --coverage",
        "prebuild": "rimraf dist",
        "start": "run-p serve:webpack serve:sass-renderer",
        "serve:webpack": "webpack-dev-server --port 3000 --config ../../webpack.config.js --open",
        "serve:sass-renderer": "npx sass-renderer",
        "build:custom": "webpack --config ../../webpack.config.js --production",
        "build": "tsc"
    },
    "dependencies": {
        "lit-element": "^2.2.1",
        "lit-html": "^1.1.2"
    },
    "devDependencies": {
        "@orxe-devkit/sass-to-ts": "^1.0.0",
        "npm-run-all": "^4.1.5"
    },
    "publishConfig": {
        "registry": "https://packages.common.cnxloyalty.com/repository/npm-hosted/"
    }
}